<!DOCTYPE html>
<html lang="en">
<!-- header part-->
<%- include('layouts/head'); -%>
<body>

<!-- Navigation Bar -->
<%- include('layouts/header'); -%>

    <div class="container">
      <h1 class="text-center" style="margin-top: 1cm">Contact Us</h1>
      <div class="row">
        <div class="col-md-8">
          <form>
            <div class="form-group">
              <label for="name">Your Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter your name"
              />
            </div>
            <div class="form-group">
              <label for="subject">Subject</label>
              <input
                type="text"
                class="form-control"
                id="subject"
                placeholder="Enter the subject"
              />
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                rows="3"
                placeholder="Enter your message"
              ></textarea>
            </div>
            <div class="form-group">
              <label for="email">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                aria-describedby="emailHelp"
                placeholder="Enter your email"
              />
              <small id="emailHelp" class="form-text text-muted"
                >We'll never share your email with anyone else.</small
              >
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input
                type="tel"
                class="form-control"
                id="phone"
                placeholder="Enter your phone number"
              />
            </div>

            <button
              type="submit"
              class="btn btn-primary"
              style="margin-bottom: 1cm"
            >
              Submit
            </button>
          </form>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">
                <i
                  class="fas fa-map-marker-alt"
                  style="padding-right: 10px"
                ></i>
                Address
              </h5>
              <p class="card-text">Conestoga College, Ontario, Canada</p>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">
                <i class="fas fa-phone" style="padding-right: 10px"></i> Phone
              </h5>
              <p class="card-text">+999-999-9999</p>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">
                <i class="fas fa-envelope" style="padding-right: 10px"></i>
                Email
              </h5>
              <p class="card-text">conestoga@conestogac.on.ca</p>
            </div>
          </div>
        </div>
      </div>
    </div>


<!-- Footer -->
<%- include('layouts/footer'); -%>

<!-- Bootstrap JS and dependencies -->
<%- include('layouts/scripts'); -%>

</body>
</html>
