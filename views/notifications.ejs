            <h5 class="card-title">Course Announcements</h5>
            <!-- Course Announcements Content -->
            <p>Announcements related to courses go here...</p>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Assignment Updates</h5>
            <!-- Assignment Updates Content -->
            <p>Updates about assignments go here...</p>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Quiz Notifications</h5>
            <!-- Quiz Notifications Content -->
            <p>Notifications about quizzes go here...</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <!-- Image Section -->
        <img src="images/notification-image.jpg" class="notification-image" alt="Notification Image">
      </div>
    </div>
  </div>
   

<!-- Footer -->
<%- include('layouts/footer'); -%>

<!-- Bootstrap JS and dependencies -->
<%- include('layouts/scripts'); -%>

